@model IEnumerable<Project_IA.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EditorLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostCategory.ArticleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleImage)
        </th>

        <th>
Likes 
        </th>

        <th>
DisLikes
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostCategory.ArticleTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EditorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleBody)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(model=>item.ArticleImage)"
                 class="thumbnail" style="width:48px; height:48px;" />
        </td>
        <td>
            @item.LikesCounter
        </td>
        <td>
            @item.DisLikesCounter
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
